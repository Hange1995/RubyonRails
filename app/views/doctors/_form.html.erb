<div class="container">
    <% if @doctor.errors.any? %>
        <h2>The following errors:</h2>
        <ul>
            <% @doctor.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>

    <%= form_with(model: @doctor,local:true) do |f|%>
        <div class="form-group row">
            <%= f.label :firstName, class:"col-2 col-form-label" %>
            <div class="col-10">
                <%= f.text_field :firstName, class:"form-control" %>
            </div>
        </div>
        <div class="form-group row">
            <%= f.label :lastName, class:"col-2 col-form-label"%>
            <div class="col-10">
                <%= f.text_field :lastName, class:"form-control"%>
            </div>
        </div>
        <div class="form-group row">
            <%= f.label :email  , class:"col-2 col-form-label"%>
            <div class="col-10">
                <%= f.email_field :email, class:"form-control"%>
            </div>
        </div>
        <div class="form-group row">
            <%= f.label :password, class:"col-2 col-form-label"%>
            <div class="col-10">
                <%= f.password_field :password, class:"form-control"%>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <%= f.submit(@doctor.new_record? ? "Sign Up" :"Update", class:"btn btn-success") %>
        </div>
        <% end %>
        <%= link_to 'Back to the list page', patients_path %>

</div>