<div class="container">
  <% @patients.each do |patient| %>
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center">
        <div class="card-header">
          by <%= patient.doctor.firstName + ' ' + patient.doctor.lastName%>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%=link_to patient.firstName+' '+patient.lastName, patient_path(patient)%></h5>
          <p class="card-text"><%=truncate(patient.description,length: 100) %></p>
          <%=link_to "View", patient_path(patient),class: "btn btn-success" %>
          <% if logged_in? && patient.doctor==current_doctor %>
            <%=link_to "Edit", edit_patient_path(patient),class: "btn btn-info" %>
            <%=link_to "Delete", patient_path(patient),class: "btn btn-danger", method: :delete, data: {confirm:"Are U sure?"} %>
          <% end %>
        </div>
        <div class="card-footer text-muted">
          <small></small>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>