<div class="container">
    <% if @patient.errors.any? %>
        <h2>The following errors:</h2>
        <ul>
            <% @patient.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>

    <%= form_with(model:@patient,local:true) do |f|%>
        <div class="form-group row">
            <%= f.label :firstName, class:"col-2 col-form-label" %>
            <div class="col-10">
                <%= f.text_field :firstName, class:"form-control" %>
            </div>
        </div>
        <div class="form-group row">
            <%= f.label :lastName, class:"col-2 col-form-label"%>
            <div class="col-10">
                <%= f.text_field :lastName, class:"form-control"%>
            </div>
        </div>
        <div class="form-group row">
            <%= f.label :description, class:"col-2 col-form-label" %>
            <div class="col-10">
                <%= f.text_area :description, class:"form-control"%>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <%= f.submit %>
        </div>
        <% end %>
        <%= link_to 'Back to the list page', patients_path %>

</div>